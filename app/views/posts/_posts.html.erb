<%= link_to(user_post_path(@user, post)) do %>

  <div class="post-container"> 
    <div class="post">
      <h3><%= post.title %></h3>
      <p><%= post.text[0..25] %> ...</p>
    </div>
    <div class="actions d-flex">
      <span>Comments: <%= post.commentsCounter%></span>
      <span>Likes: <%= post.likesCounter%></span>
    </div>
  </div>

  <div class="comments">
    <% if post.comments == [] %>
      <p>No comments !!!</p>
    <% end %>
  
    <% @post.most_recent_comments.order('created_at DESC').limit(5).each do |comment|%> 
      <div class="comment-container">
        <span><%=comment.author.name %>:</span>
        <span><%=comment.text %></span>
      </div>
    <% end %>
  </div>
<% end %> 
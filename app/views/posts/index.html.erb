<section class="show-user">
  <h1>Show all Posts of a user</h1>

  <% render 'users/user', user: @user %>

   <article class="user d-flex">
    <div class="img-container">
      <img src="<%= @user.photo %>" alt="User_Photo">
    </div>
    <div class="details d-flex">
      <h2 class="name"><%= @user.name %></h2>
      <span class="sub">Number of posts: <%= @user.postsCounter %></span>
    </div>
  </article>

    <div class="posts">
    <% @posts.each do | post | %>
      <div class="post-container"> 
        <div class="post">
          <h3><%= post.title %></h3>
          <p><%= post.text[0..25] %> ...</p>
        </div>
        <div class="actions d-flex">
          <span>Comments: <%= post.commentsCounter%></span>
          <span>Likes: <%= post.likesCounter%></span>
        </div>
    </div>
    <% end %>
    
  </div> 
    <div class="post-btn">
    <button>
      <%= link_to "back", users_path%>
    </button>
  </div>
    <div class="post-btn">
    <button>
      <%= link_to "Add Post", new_user_post_path(@user)%>
    </button>
  </div>
</section> 